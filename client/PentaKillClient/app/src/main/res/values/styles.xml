<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="font0">
        <item name="android:textSize">24sp</item>
    </style>

    <!-- 分割线 -->
    <style name="Divider.Horizontal" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <style name="commonButton">
        <item name="android:textColor">@color/colorBackGround</item>
        <item name="android:background">@drawable/orange_background</item>
        <item name="android:textSize">@dimen/font0</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="commonButton.circle">
        <item name="background">@drawable/orange_background_circle</item>
    </style>
</resources>
